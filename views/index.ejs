<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Joke</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container col-xxl-8 px-4 py-5">
      <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        
        <!-- ✅ Image column -->
        <div class="col-10 col-sm-8 col-lg-6">
          <img
            src="/images/hand-drawn-construction-background_23-2147741567 (1).jpg"
            class="d-block mx-lg-auto img-fluid"
            alt="Funny Joke Background"
            width="700"
            height="500"
            loading="lazy"
          />
        </div>

        <!-- ✅ Joke + Answer column -->
        <div class="col-lg-6">
          <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">
            <%= joke %>
          </h1>

          <!-- Answer is hidden initially -->
          <p class="lead" id="answer" style="display:none;">
            <%= answer %>
          </p>

          <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button id="showAnswerBtn" type="button" class="btn btn-primary btn-lg px-4 me-md-2">
              Show Answer
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      const button = document.getElementById("showAnswerBtn");
      const answer = document.getElementById("answer");

      button.addEventListener("click", () => {
        answer.style.display = "block"; // reveal the answer
      });
    </script>
  </body>
</html>
